{
  "name": "prism",
  "private": true,
  "version": "0.1.0",
  "packageManager": "pnpm@9.12.0",
  "scripts": {
    "build": "pnpm -r run build",
    "dev": "pnpm -r --parallel --filter prism-registry-backend --filter prism-registry-web run dev",
    "dev:backend": "pnpm --filter prism-registry-backend dev",
    "dev:web": "pnpm --filter prism-registry-web dev",
    "lint": "pnpm -r run lint",
    "typecheck": "pnpm -r run typecheck"
  },
  "devDependencies": {
    "@types/node": "22.7.4",
    "tsx": "4.15.7",
    "typescript": "5.6.3"
  }
}
